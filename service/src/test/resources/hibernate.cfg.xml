<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="com.sergdalm.entity.User"/>
        <mapping class="com.sergdalm.entity.UserInfo"/>
        <mapping class="com.sergdalm.entity.Address"/>
        <mapping class="com.sergdalm.entity.Appointment"/>
        <mapping class="com.sergdalm.entity.Review"/>
        <mapping class="com.sergdalm.entity.Service"/>
        <mapping class="com.sergdalm.entity.ServiceSale"/>
        <mapping class="com.sergdalm.entity.SpecialistAvailableTime"/>
        <mapping class="com.sergdalm.entity.SpecialistService"/>
    </session-factory>
</hibernate-configuration>